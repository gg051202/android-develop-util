<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout android:id="@+id/smartRefreshLayout"
                                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       xmlns:tools="http://schemas.android.com/tools"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       app:srlEnableLoadmoreWhenContentNotFull="false"
                                                       app:srlReboundDuration="400"
                                                       tools:context="a26c.com.android_frame_test.activity.SmartRefreshLayoutActivity">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/start_image"
            app:srlAccentColor="@android:color/white"
            app:srlClassicsSpinnerStyle="Translate"
            app:srlDrawableMarginRight="20dp"
            app:srlDrawableSize="30dp"
            app:srlEnableLastTime="false"
            app:srlFinishDuration="100"
            app:srlPrimaryColor="#00000000"
            app:srlTextSizeTitle="16sp" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="#2cad00">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#ff0000"
                    android:text="banner"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </ScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5500ffff" />
</FrameLayout>
