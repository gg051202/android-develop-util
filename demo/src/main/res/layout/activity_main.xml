<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout android:id="@+id/activity_main"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  tools:context="a26c.com.android_frame_test.activity.MainActivity">

        <Button
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog" />

        <com.a26c.android.frame.widget.FrameRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            app:rating_clickable="true"
            app:rating_starNumber="5"
            app:rating_step="0.1" />

        <Button
            android:id="@+id/reactNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="React Native界面" />

        <com.a26c.android.frame.widget.CommonItem
            android:id="@+id/commonItem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:commonLeftImage="@mipmap/share_icon_qq"
            app:commonLeftText="测试"
            app:commonRightImage="@mipmap/icon_arrow_right"
            app:commonRightText="demo"
            app:commonShowTopDivider="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <com.a26c.android.frame.widget.RedPointTextView
                android:id="@+id/red1"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:layout_margin="10dp" />

            <com.a26c.android.frame.widget.RedPointTextView
                android:id="@+id/red2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp" />

            <com.a26c.android.frame.widget.RedPointTextView
                android:id="@+id/red3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp" />

            <com.a26c.android.frame.widget.RedPointTextView
                android:id="@+id/red4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="30dp" />

            <com.a26c.android.frame.widget.RedPointTextView
                android:id="@+id/red5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp" />

        </LinearLayout>

        <com.a26c.android.frame.widget.SquareFrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正方形frameLayout"
                android:textColor="@color/colorAccent"
                android:textSize="17sp" />

        </com.a26c.android.frame.widget.SquareFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/uploadImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="上传图片" />

            <ImageView
                android:id="@+id/uploadImageView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_icon_qq" />

        </LinearLayout>

        <Button
            android:id="@+id/gotoHtmlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去一个Html页面" />

        <com.a26c.android.frame.widget.BaseRecyclerView
            android:id="@+id/baseRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
</ScrollView>